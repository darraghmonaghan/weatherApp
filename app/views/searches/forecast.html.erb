

<div class='container'>

	<div class='row'>

		<div class='col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3'>

			<h1 class='title' id='titleFont'><%= @target_city %></h1><hr>
				<h3 class='title' id='subFont'>16 Day Weather Forecast</h3><br>

				<!-- @count is ERB templated into each bootstrap div to ensure correct open / collapse functionality -->
				<% @count = 0 %>
				<% @results['list'].each do |a| %>

						<div class="panel-group" id=<%= @count %>>
						  <div class="panel panel-default">
						    <div class="panel-heading">      
						        <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent=#<%= @count %> href=#collapse<%= @count %>>
						          <h4 class="panel-title"> <%= Time.at(a['dt']).to_datetime %><span class='pull-right'><%= a['temp']['day'] %></span></h4>
						        </a>      
						    </div>
						    <div id=collapse<%= @count %> class="panel-collapse collapse">
						      <div class="panel-body">
						      		<h4>Description: <%= a['weather'][0]['description'] %></h4>
						      		<h6>Minimum: <%= a['temp']['min'] %></h6>
						      		<h6>Maximum: <%= a['temp']['max'] %></h6>
						      		<h6>Morning Temp: <%= a['temp']['morn'] %></h6>
						      		<h6>Evening Temp: <%= a['temp']['eve'] %></h6>
						      		<h6>Night Time Temp: <%= a['temp']['night'] %></h6>		
						      </div>
						    </div>
						  </div>
						</div>

					<!-- increment counter to ensure accordion display works properly -->
					<% @count += 1 %>		

				<% end %>

			<%= render "shared/footer" %>
				
		<!-- Div below for GRID SYSTEM -->
		</div>

	<!-- Div below for ROW class  -->
	</div>	

<!-- Div below for CONTAINER class -->
</div>