

<div class='container' id='searchPage'>

	<div class='row'>

		<div class='col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3'>

				<%= form_for :data, url: {action: 'forecast'} do |f| %>

			<div id='searchBar'>
				<%= f.text_field :city, placeholder: 'Name a City', class: 'form-control' %><br>
			</div>

				<div class='centered'>
					<%= f.submit 'Check the Weather', :class => 'btn btn-default', :id => 'searchBtn'%>
				</div>

			<% end %>

			
			<%= render "shared/footer" %>


		<!-- div for GRID SYSTEM -->
		</div>

	<!-- div for ROW class -->

</div>

<!-- div for CONTAINER -->
</div>

